<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/produit_card"

    android:layout_width="170dp"
    android:layout_height="240dp"

    android:layout_margin="10dp"

    android:background="@drawable/pedller4"

    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_produit"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"

            android:src="@drawable/r"


            />

        <TextView
            android:id="@+id/nom_produit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:textColor="@color/noir"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/item_layout"
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp"


            >

            <TextView
                android:id="@+id/prix_produit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.85"
                android:gravity="start|center_vertical"
                android:textColor="@color/vert"
                android:textSize="18sp"


                />

            <ImageView
                android:id="@+id/add_panier_produit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.15"

                android:backgroundTint="@color/vert"
                android:src="@drawable/ic_baseline_shopping_basket_green_24"

                />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>





